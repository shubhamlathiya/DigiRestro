<!doctype html>
<html lang="en" dir="ltr">
<head>
    <title>Branch - Areas</title>

    <!-- Library / Plugin Css Build -->
    <link rel="stylesheet" href="assets/css/core/libs.min.css">
    <!-- Custom Css -->
    <link rel="stylesheet" href="assets/css/aprycot.mine209.css?v=1.0.0">

</head>
<body>
<%- include("sidebar.ejs") %>
<main class="main-content">
    <div class="position-relative">
        <%- include("nav.ejs") %>
    </div>
    <div class="content-inner mt-5 py-0">

        <div class="row">
            <div class="col-xl-9 col-lg-8">
                <div class="card">
                    <div class="card-header d-flex justify-content-between">
                        <div class="header-title">
                            <h4 class="card-title">Area List</h4>
                        </div>
                    </div>
                    <div class="card-body px-0">
                        <div class="table-responsive">
                            <table id="user-list-table" class="table table-striped" role="grid"
                                   data-toggle="data-table">
                                <thead>
                                <tr class="ligth">
                                    <th>No</th>
                                    <th>Area Name</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                <% for (let i = 0; i < area.length; i++) { %>
                                    <tr>
                                        <td><%= i + 1 %></td>
                                        <td><%= area[i].area_name %></td>
                                        <td>
                                            <% if(area[i].is_active == true){ %>
                                                <a href="/branch/area-activeAndDeactive?id=<%= area[i]._id %>&value=true"><span
                                                            class="badge bg-primary">Active</span></a>

                                            <% }else { %>
                                                <a href="/branch/area-activeAndDeactive?id=<%= area[i]._id %>&value=false   "><span
                                                            class="badge bg-danger">Deactive</span></a>

                                            <% } %>
                                        </td>
                                        <td>
                                            <div class="flex align-items-center list-user-action">
                                                <a class="update-form btn btn-sm btn-icon btn-warning"
                                                   data-area-id="<%= area[i]._id %>"
                                                   data-area-name="<%= area[i].area_name %>">
                                                <span class="btn-inner">
                                                   <svg width="20" viewBox="0 0 24 24" fill="none"
                                                        xmlns="http://www.w3.org/2000/svg">
                                                      <path d="M11.4925 2.78906H7.75349C4.67849 2.78906 2.75049 4.96606 2.75049 8.04806V16.3621C2.75049 19.4441 4.66949 21.6211 7.75349 21.6211H16.5775C19.6625 21.6211 21.5815 19.4441 21.5815 16.3621V12.3341"
                                                            stroke="currentColor" stroke-width="1.5"
                                                            stroke-linecap="round"
                                                            stroke-linejoin="round"></path>
                                                      <path fill-rule="evenodd" clip-rule="evenodd"
                                                            d="M8.82812 10.921L16.3011 3.44799C17.2321 2.51799 18.7411 2.51799 19.6721 3.44799L20.8891 4.66499C21.8201 5.59599 21.8201 7.10599 20.8891 8.03599L13.3801 15.545C12.9731 15.952 12.4211 16.181 11.8451 16.181H8.09912L8.19312 12.401C8.20712 11.845 8.43412 11.315 8.82812 10.921Z"
                                                            stroke="currentColor" stroke-width="1.5"
                                                            stroke-linecap="round"
                                                            stroke-linejoin="round"></path>
                                                      <path d="M15.1655 4.60254L19.7315 9.16854" stroke="currentColor"
                                                            stroke-width="1.5" stroke-linecap="round"
                                                            stroke-linejoin="round"></path>
                                                   </svg>
                                                </span>
                                                </a>
                                                <a class="btn btn-sm btn-icon btn-danger" data-toggle="tooltip"
                                                   data-area-id="<%= area[i]._id %>"
                                                   data-original-title="Delete" onclick="Aredelete(this)">
                                                                                                    <span class="btn-inner">
                                                                                                       <svg width="20"
                                                                                                            viewBox="0 0 24 24"
                                                                                                            fill="none"
                                                                                                            xmlns="http://www.w3.org/2000/svg"
                                                                                                            stroke="currentColor">
                                                                                                          <path d="M19.3248 9.46826C19.3248 9.46826 18.7818 16.2033 18.4668 19.0403C18.3168 20.3953 17.4798 21.1893 16.1088 21.2143C13.4998 21.2613 10.8878 21.2643 8.27979 21.2093C6.96079 21.1823 6.13779 20.3783 5.99079 19.0473C5.67379 16.1853 5.13379 9.46826 5.13379 9.46826"
                                                                                                                stroke="currentColor"
                                                                                                                stroke-width="1.5"
                                                                                                                stroke-linecap="round"
                                                                                                                stroke-linejoin="round"></path>
                                                                                                          <path d="M20.708 6.23975H3.75"
                                                                                                                stroke="currentColor"
                                                                                                                stroke-width="1.5"
                                                                                                                stroke-linecap="round"
                                                                                                                stroke-linejoin="round"></path>
                                                                                                          <path d="M17.4406 6.23973C16.6556 6.23973 15.9796 5.68473 15.8256 4.91573L15.5826 3.69973C15.4326 3.13873 14.9246 2.75073 14.3456 2.75073H10.1126C9.53358 2.75073 9.02558 3.13873 8.87558 3.69973L8.63258 4.91573C8.47858 5.68473 7.80258 6.23973 7.01758 6.23973"
                                                                                                                stroke="currentColor"
                                                                                                                stroke-width="1.5"
                                                                                                                stroke-linecap="round"
                                                                                                                stroke-linejoin="round"></path>
                                                                                                       </svg>
                                                                                                    </span>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-lg-4">
                <div class="card addform">
                    <div class="card-header d-flex justify-content-between">
                        <div class="header-title">
                            <h4 class="card-title">Add Areas</h4>
                        </div>
                    </div>
                    <div class="card-body">
                        <form class="row g-3 needs-validation" action="/branch/add-area" method="post" novalidate>
                            <div class="form-group">
                                <label for="validationCustom05" class="form-label">Area Name</label>
                                <input type="text" class="form-control" id="area_name" placeholder="Area Name"
                                       name="area_name" required>
                                <div class="invalid-feedback">
                                    Please enter area name.
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </form>
                    </div>
                </div>

                <div class="card updateform">
                    <div class="card-header d-flex justify-content-between">
                        <div class="header-title">
                            <h4 class="card-title">Update Areas</h4>
                        </div>
                    </div>
                    <div class="card-body">
                        <form class="row g-3 needs-validation" action="/branch/update-area" method="post" novalidate>
                            <input type="hidden" class="form-control" id="area_id" name="area_id" readonly>
                            <div class="form-group">
                                <label for="validationCustom05" class="form-label">Area Name</label>
                                <input type="text" class="form-control" id="area_name" name="area_name" required>
                                <div class="invalid-feedback">
                                    Please enter area name.
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </form>
                    </div>
                </div>
            </div>

        </div>

    </div>
</main>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $(".updateform").hide();

        $(document).on("click", ".update-form", function () {
            $(".updateform").show();
            $(".addform").hide();

            var area_id = $(this).attr("data-area-id");
            var area_name = $(this).attr("data-area-name");

            updateArea(area_id, area_name);
        });

        function updateArea(area_id, area_name) {

            var areaName = $("input[name='area_name']");
            areaName.val(area_name);

            var areaId = $("input[name='area_id']");
            areaId.val(area_id);
        }
    });

</script>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    function Aredelete(element) {
        const areaId = element.getAttribute('data-area-id');

        console.log(areaId)
        console.log("/branch/delete-area?id=" + areaId)
        Swal.fire({
            title: "Are you sure?",
            text: "You won't be able to revert this!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Yes, delete it!"
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    type: "POST",
                    url: "/branch/delete-area?id=" + areaId,
                    success: function (response) {
                        Swal.fire({
                            title: "Deleted!",
                            text: "Your record has been deleted.",
                            icon: "success"
                        }).then(() => {
                            window.location.href = "/branch/master-area";
                        });
                    },
                    error: function (error) {
                        Swal.fire({
                            title: "Error!",
                            text: "Failed to delete the record.",
                            icon: "error"
                        });
                    }
                });
            }
        });
    }
</script>

<%- include("links.ejs") %>
</body>
</html>