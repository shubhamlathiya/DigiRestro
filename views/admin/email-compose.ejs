<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Email - Compose</title>
  </head>

  <body>
    <div id="app">
      <div class="main-wrapper main-wrapper-1">
        <%- include("nav-sidebar.ejs") %>
        <!-- Main Content -->
        <div class="main-content">
          <!-- write a code -->

          <section class="section">
            <div class="section-body">
              <div class="row">
                <%- include("email-nav.ejs") %>
                <div class="col-xs-12 col-sm-12 col-md-9 col-lg-9">
                  <div class="card">
                    <div class="boxs mail_listing">
                      <div class="inbox-center table-responsive">
                        <table class="table table-hover">
                          <thead>
                            <tr>
                              <th colspan="1">
                                <div class="inbox-header">
                                  Compose New Message
                                </div>
                              </th>
                            </tr>
                          </thead>
                        </table>
                      </div>
                      <div class="row">
                        <div class="col-lg-12">
                          <form action="/admin/send-enquiry-reply" method="post" class="composeForm">
                            <div class="form-group">
                              <div class="form-line">
                                <input
                                  type="text"
                                  name="email_id"
                                  id="email_address"
                                  class="form-control"
                                  placeholder="TO"
                                  value="<%= (typeof to !== 'undefined' ? to : '') %>"
                                  required
                                />
                              </div>
                            </div>
                            <div class="form-group">
                              <div class="form-line">
                                <input
                                  type="text"
                                  id="subject"
                                  name="subject"
                                  class="form-control"
                                  placeholder="Subject"
                                  onfocus=""
                                  required
                                />
                              </div>
                            </div>
                            <div class="form-group">
                              <textarea
                                class="form-control"
                                name="text"
                                placeholder="Message"
                                required
                              ></textarea>
                            </div>
                            <div class="compose-editor m-t-20">
                              <div id="summernote"></div>
                              <input type="file" class="default" multiple />
                            </div>

                            <!-- <div class="col-lg-12"> -->
                            <!-- <div class="m-l-25 m-b-20"> -->
                            <div class="form-group"></div>
                              <button
                                type="submit"
                                class="btn btn-info btn-border-radius waves-effect" 
                              >
                                Send
                              </button>
                              <button
                                type="reset"
                                class="btn btn-danger btn-border-radius waves-effect"
                              >
                                Discard
                              </button>
                            <!-- </div> -->
                            <!-- </div> -->
                            <!-- </div> -->
                          </form>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </section>
        </div>
      </div>
    </div>
  </body>
</html>
